{
  "schemaVersion": 1,
  "id": "kambrik",
  "version": "${version}",

  "name": "Kambrik",
  "description": "A Light-weight Kotlin Library Mod!",
  "authors": [
    "Ejektaflex"
  ],
  "contact": {
    "homepage": "None yet",
    "sources": "https://github.com/ejektaflex/Kambrik",
    "issues": "https://github.com/ejektaflex/Kambrik/issues"
  },

  "license": "GPL 3.0",
  "icon": "assets/kambrik/icon.png",

  "accessWidener" : "kambrik.accesswidener",

  "environment": "*",
  "entrypoints": {
    "preLaunch": [
      {
        "adapter": "kotlin",
        "value": "io.ejekta.kambrik.internal.KambrikPrelaunch"
      }
    ],
    "main": [
      {
        "adapter": "kotlin",
        "value": "io.ejekta.kambrik.internal.KambrikMod"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "io.ejekta.kambrik.internal.client.KambrikClientMod"
      }
    ]
  },
  "mixins": [
    "kambrik.mixins.json"
  ],

  "custom": {
    "kambrik": {
      "log_level": "TRACE",
      "log_markers": {
        "kambrik:rendering": false
      }
    },
    "modmenu": {
      "badges": [ "library" ]
    }
  },

  "depends": {
    "fabricloader": ">=0.14.9",
    "fabric": ">=0.60.0",
    "minecraft": "~1.19-0",
    "fabric-language-kotlin": ">=1.7.10"
  },
  "suggests": {
    "flamingo": "*"
  }
}
